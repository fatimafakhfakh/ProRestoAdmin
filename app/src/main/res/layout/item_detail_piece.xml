<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
         android:id="@+id/item_piece"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_date_piece"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="12/02/2020"
            android:typeface="serif"
            android:layout_weight="1"/>



        <TextView
            android:id="@+id/txt_num_piece"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:textStyle="bold"
            android:text="BL1999633"
            android:typeface="serif"
            android:layout_weight="1"/>


    <TextView
        android:id="@+id/txt_montant"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="10.222"
        android:typeface="serif"
        android:gravity="right"
        android:textColor="@color/color_info"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/txt_reglement"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="10.222"
        android:gravity="right"
        android:typeface="serif"
        android:textColor="@color/blue"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/txt_reste_a_payer"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="10.222"
        android:gravity="right"
        android:textColor="@color/colorPrimary"
        android:typeface="serif"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/txt_recu_draft"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="10.222"
        android:gravity="right"
        android:textColor="@color/yello_dark"
        android:typeface="serif"
        android:layout_weight="1"/>


</LinearLayout>


