<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_personel"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#40FCF9F9"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp">

                <FrameLayout
                    android:id="@+id/frm_pos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_edge_red">

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="20dp">


                    <LinearLayout
                        android:id="@+id/ll_livraison"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <!--       <ImageView
                                   android:layout_width="20dp"
                                   android:layout_height="20dp"
                                   app:srcCompat="@drawable/ic_livraison" />


                                   <TextView

                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="Livraison"/>-->

                        <TextView
                            android:id="@+id/txt_livraison"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txt_livraison_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="5555,555dt"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center" />


                        <ImageView
                            android:id="@+id/btn_detail_qt"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:src="@drawable/ic_detail_qt" />


                    </LinearLayout>


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/line" />


                    <LinearLayout
                        android:id="@+id/ll_retour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">



                        <!--
                              <ImageView
                                  android:layout_width="20dp"
                                  android:layout_height="20dp"
                                  app:srcCompat="@drawable/ic_retour" />


                              <TextView
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Retour"/>

                              -->

                        <TextView
                            android:id="@+id/txt_retour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txt_retour_ttc"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="555,555dt"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center" />


                    </LinearLayout>


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/line" />


                    <LinearLayout
                        android:id="@+id/ll_gratuit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:textSize="10dp">
                        <!--
                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                app:srcCompat="@drawable/ic_gratuit" />


                                            <TextView

                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Gratuit">

                                            </TextView>-->

                        <TextView
                            android:id="@+id/txt_gratuit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/line" />


                    <LinearLayout
                        android:id="@+id/ll_caisse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <!--
                                            <ImageView
                                                android:id="@+id/img_caisse"
                                                android:layout_width="17dp"
                                                android:layout_height="20dp"
                                                app:srcCompat="@drawable/ic_portfeuille" />


                                            <TextView
                                                android:id="@+id/txt_caisse_libelle"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Draft RÃ¨glement">

                                            </TextView>
                        -->

                        <TextView
                            android:id="@+id/txt_caisse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:gravity="center" />


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp">

            <!--    <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_livreur"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FDFBFB"/>-->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_personnel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp" />


                <TextView
                    android:id="@+id/txt_fonction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fonction"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="10dp"

                    />

            </LinearLayout>


            <!-- <androidx.cardview.widget.CardView
                 xmlns:card_view="http://schemas.android.com/apk/res-auto"
                 android:id="@+id/card_icon"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:clickable="true"
                 android:layout_gravity="center"
                 android:foreground="?android:attr/selectableItemBackground"
                 card_view:cardBackgroundColor="#2FFCF9F9"
